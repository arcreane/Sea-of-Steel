<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeaOfSteel.Pages.LobbyPage"
             Title="Créer une partie">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Choisissez un mode de jeu"
               FontSize="22"
               HorizontalOptions="Center" />

        <Button Text="Jouer contre un bot"
                FontSize="18"
                Clicked="JouerContreBot_Clicked"
                BackgroundColor="LightGreen" />

        <Button Text="Héberger une partie"
                FontSize="18"
                Clicked="CreerPartie_Clicked"
                BackgroundColor="LightSkyBlue" />

        <Button Text="Retour"
                Clicked="OnRetourClicked"
                BackgroundColor="LightGray"/>
    </VerticalStackLayout>
</ContentPage>
