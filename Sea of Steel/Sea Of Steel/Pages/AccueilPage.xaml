<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeaOfSteel.Pages.AccueilPage"
             Title="Sea of Steel"
             BackgroundColor="Black">

    <AbsoluteLayout>

        <!-- Image de fond dynamique -->
        <Image x:Name="BackgroundImageView"
               Source="navire.jpg"
               Aspect="AspectFill"
               AbsoluteLayout.LayoutBounds="0,0,1,1"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Animation de bulle -->
        <Image x:Name="Bubble1"
               Source="bubble.png"
               IsVisible="False"
               Opacity="0.8"
               WidthRequest="50"
               HeightRequest="50"
               AbsoluteLayout.LayoutBounds="0.2,1,50,50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Structure principale de la page -->
        <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">

            <!-- Contenu principal (invisible au départ) -->
            <ScrollView x:Name="MainContent" IsVisible="False"
                        Opacity="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        AbsoluteLayout.LayoutBounds="0.5,0.5,AutoSize,AutoSize"
                        AbsoluteLayout.LayoutFlags="PositionProportional">      
                <StackLayout Padding="30" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

                    <Image Source="anchor_logo.png"
                           WidthRequest="120"
                           HeightRequest="120"
                           HorizontalOptions="Center" />

                    <Label Text="Sea of Steel"
                           FontSize="40"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Label Text="Préparez-vous au combat naval !"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Button Text="Rejoindre une partie"
                            FontSize="18"
                            CornerRadius="12"
                            BackgroundColor="#1e3f66"
                            TextColor="White"
                            Clicked="OnJoinClicked" />

                    <Button Text="Créer une partie"
                            FontSize="18"
                            CornerRadius="12"
                            BackgroundColor="#356d9b"
                            TextColor="White"
                            Clicked="OnCreateClicked" />

                    <Button Text="Wiki" 
                            Clicked="OnWikiClicked"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            Margin="0,20"/>

                    <Button Text="Quitter"
                            FontSize="16"
                            BackgroundColor="#7a1c1c"
                            TextColor="White"
                            Clicked="OnQuitClicked" />

                </StackLayout>
            </ScrollView>

            <!-- Couche d’intro -->
            <Grid x:Name="IntroLayer"
                  BackgroundColor="#000000AA"
                  AbsoluteLayout.LayoutBounds="0,0,1,1"
                  AbsoluteLayout.LayoutFlags="All">

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnIntroTapped"/>
                </Grid.GestureRecognizers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center">
                        <Image Source="anchor_logo.png"
                               x:Name="LogoImage"
                               WidthRequest="150"
                               HeightRequest="150"
                               HorizontalOptions="Center"/>
                        <Label Text="Sea of Steel"
                               x:Name="IntroTitle"
                               FontSize="48"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Grid>
            </Grid>

        </Grid>
    </AbsoluteLayout>
</ContentPage>
